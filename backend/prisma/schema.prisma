generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  email     String   @unique
  password  String
}

model Book {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  title           String
  author          String?
  cover           String?
  imagesDirectory String?
  chapters        Chapter[]
}

model Chapter {
  id       Int       @id @default(autoincrement())
  bookId   Int
  title    String
  order    Int
  book     Book      @relation(fields: [bookId], references: [id])
  sections Section[]
}

model Section {
  id        Int     @id @default(autoincrement())
  chapterId Int
  content   String
  question  String?
  answer    String?
  order     Int
  chapter   Chapter @relation(fields: [chapterId], references: [id])
}
